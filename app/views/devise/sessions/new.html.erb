<div class="middle-box text-center loginscreen  animated fadeInDown">
  <div>
    <div>
      <h1 class="logo-name">IN+</h1>
    </div>
    <h3>Welcome to InstaContact</h3>
    <p>
        <!-- This is awesome, you can put your landing text here. -->
    </p>
    <p>Login in. To see it in action.</p>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "m-t"}) do |f| %>
        <!-- Error div for the form errors -->
        <% if resource.errors.any? %>
          <div class="form-group">
            <div id="error_explanation">
              <h2><%= pluralize(resource.errors.count, "error") %> prohibited this post from being saved:</h2>
              <ul>
              <% resource.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          </div>
        <% end %>  
          <div class="form-group">
            <%= f.text_field :email, class: 'form-control', placeholder: "Username", required: true %>
          </div>
          <div class="form-group">
            <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: "Password", required: true %>
          </div>
          <%= f.submit 'Login' , class: 'btn btn-primary block full-width m-b' %>
          <div class="btn btn-sm btn-white btn-block" >
            <%= render "devise/shared/links" %>
          </div>
          <!-- <a href="#"><small>Forgot password?</small></a>
          <a class="btn btn-sm btn-white btn-block" href="">Create an account</a> -->
    <% end %>
    <p class="m-t"> <small>Copyrights &copy; <%= Time.now.year %></small> </p>
  </div>
</div>