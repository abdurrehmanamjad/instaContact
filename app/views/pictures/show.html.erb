<%= render 'shared/breadcrumb', type_of_page: "Show" , name_of_model: Picture, nav_urls_hash: { root_url => "Home" , pictures_path => 'Pictures' , "" => "Show" } %>
<div class="wrapper wrapper-content animated fadeInRight">
	<p id="notice"><%= notice %></p>
	<div class="row">
		<div class="col-lg-6">
        <div class="ibox float-e-margins">
            <%= render 'shared/titlebox' , heading_main: "All information" , description_in_small: "" %>
            <div class="ibox-content">
                          	<div class="well well-sm">
                  	<h3>
                    	Name:
                  	</h3>
              		              			<%= @picture.name %>
              		              	</div>
                          	<div class="well well-sm">
                  	<h3>
                    	Description:
                  	</h3>
              		    
                  		<%= ((@picture.description.present?)? @picture.description.html_safe : "") %>
              		              	</div>
                        </div>
            <div class="ibox-content">
				<%= link_to 'Back', pictures_path, class: "btn btn-white" %>
				<%= link_to 'Edit', edit_picture_path(@picture), class: "btn btn-primary" %>  
    		</div>
        </div>
		</div>
	</div>
</div>