<%= render 'shared/breadcrumb', type_of_page: "" , name_of_model: 'User', nav_urls_hash: { root_url => "Home" , users_path => 'Users' } %>
<div class="wrapper wrapper-content animated fadeInRight">
    <p id="notice"><%= notice %></p>
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    <%= link_to 'New User', new_user_path, class: "btn btn-primary", style: "width:100%;" %>
                </div>
                <%= render 'shared/titlebox' , heading_main: "All Listings" , description_in_small: "With lots of options." %>
                <div class="ibox-content">
                    <table class="table table-striped table-bordered table-hover dataTables-example" >
                        <thead>
                            <tr>
                                                                  <th>Username</th>
                                                                  <th>First name</th>
                                                                  <th>Last name</th>
                                                                  <th>Gender</th>
                                                                  <th>Address</th>
                                                                  <th>City</th>
                                                                  <th>Country</th>
                                                                <th>Show</th>
                                <th>Edit</th>
                                <th>Delete</th>
                            </tr>
                        </thead>    
                        <tbody>
                            <% @users.each do |user| %>
                            <!-- Other options for tr class: class="gradeC" -->
                            <tr class="gradeX">
                                                                                                            <td><%= user.username %></td>
                                                                                                                                                <td><%= user.first_name %></td>
                                                                                                                                                <td><%= user.last_name %></td>
                                                                                                                                                <td><%= user.gender %></td>
                                                                                                                                                <td><%= user.address %></td>
                                                                                                                                                <td><%= user.city %></td>
                                                                                                                                                <td><%= user.country %></td>
                                                                                                    <td><%= link_to 'Show', user %></td>
                                <td><%= link_to 'Edit', edit_user_path(user) %></td>
                                <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                            </tr>
                            <% end %>
                        </tbody>
                        <tfoot>
                            <tr>
                                                                  <th>Username</th>
                                                                  <th>First name</th>
                                                                  <th>Last name</th>
                                                                  <th>Gender</th>
                                                                  <th>Address</th>
                                                                  <th>City</th>
                                                                  <th>Country</th>
                                                                <th>Show</th>
                                <th>Edit</th>
                                <th>Delete</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Content for Javascript -->
<% content_for :javascript do %>
  <script type="text/javascript">
    $(function() {
      $('.dataTables-example').dataTable({
        "dom": 'T<"clear">lfrtip',
        "tableTools": {
            "sSwfPath": "../assets/dataTables/swf/copy_csv_xls_pdf.swf"
        }
      });
    });
  </script>
<% end %>