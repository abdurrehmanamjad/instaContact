<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-content">
                <div class="search-form">
                    <%= form_tag search_api_path(search_type: "users"), method: :get, remote: true, class: "form-horizontal" do %>
                    <div class="input-group">
                        <%= text_field_tag :search_content , nil, class: 'form-control input-lg', placeholder: 'Please type usernames here... (App is running in Sandbox, you can only search user with terms "lethal" or "angel")', required: true %>
                        <div class="input-group-btn">
                            <%= submit_tag 'Search Users' , class: 'btn btn-lg btn-primary' %>
                        </div>
                    </div>
                  <% end %>
                </div>
              <div class="hr-line-dashed"></div>
              <div class="search-form">
                    <%= form_tag search_api_path(search_type: "tags"), method: :get, remote: true, class: "form-horizontal" do %>
                    <div class="input-group">
                        <%= text_field_tag :search_content , nil, class: 'form-control input-lg', placeholder: 'Please type tags here...', required: true %>
                        <div class="input-group-btn">
                            <%= submit_tag 'Search Tags' , class: 'btn btn-lg btn-warning' %>
                        </div>
                    </div>
                  <% end %>
                </div>
              <div class="hr-line-dashed"></div> 
              <div class="search-result">
              </div>
            </div>
        </div>
    </div>
  </div>
</div>


